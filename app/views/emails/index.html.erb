<div class='container'>
  <%= button_to "Recevoir un email", { action: "create" }, class: "btn btn-primary" %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Number</th>
        <th scope="col">Object</th>
        <th scope="col">Body</th>
      </tr>
    </thead>
    <tbody id="email_new" is="turbo-frame">
      <turbo-frame>
        <% @emails.each do |email| %>
          <%= render partial: "email", locals: {email: email} %>
        <% end %>
      </turbo-frame>
    </tbody>
  </table>
</div>
